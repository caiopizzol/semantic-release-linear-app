{
    "name": "semantic-release-linear-app",
    "version": "0.7.1",
    "description": "Semantic-release plugin to update Linear issues with version labels",
    "type": "module",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "engines": {
        "node": ">=18"
    },
    "scripts": {
        "build": "tsc",
        "build:watch": "tsc --watch",
        "clean": "rm -rf dist",
        "prebuild": "npm run clean",
        "prepublishOnly": "npm run build",
        "type-check": "tsc --noEmit",
        "lint": "eslint src/**/*.ts",
        "format": "prettier --write src/**/*.ts",
        "prepare": "husky",
        "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
        "test:watch": "jest --watch",
        "validate": "pnpm lint && pnpm type-check && pnpm build && pnpm test"
    },
    "jest": {
        "preset": "ts-jest/presets/default-esm",
        "testEnvironment": "node",
        "extensionsToTreatAsEsm": [
            ".ts"
        ],
        "moduleNameMapper": {
            "^(\\.{1,2}/.*)\\.js$": "$1"
        },
        "transform": {
            "^.+\\.tsx?$": [
                "ts-jest",
                {
                    "useESM": true
                }
            ]
        },
        "testMatch": [
            "**/*.test.ts"
        ]
    },
    "keywords": [
        "semantic-release",
        "linear",
        "version",
        "release",
        "plugin",
        "typescript"
    ],
    "author": "Caio Pizzol",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/caiopizzol/semantic-release-linear-app.git"
    },
    "peerDependencies": {
        "semantic-release": ">=20.0.0"
    },
    "dependencies": {
        "@semantic-release/error": "^4.0.0",
        "execa": "^9.6.1",
        "node-fetch": "^3.3.2"
    },
    "devDependencies": {
        "@jest/globals": "^30.2.0",
        "@semantic-release/commit-analyzer": "^13.0.1",
        "@semantic-release/git": "^10.0.1",
        "@semantic-release/github": "^12.0.2",
        "@semantic-release/npm": "^13.1.3",
        "@semantic-release/release-notes-generator": "^14.1.0",
        "@types/jest": "^30.0.0",
        "@types/node": "^25.0.1",
        "@types/node-fetch": "^2.6.13",
        "@types/semantic-release": "^21.1.0",
        "@typescript-eslint/eslint-plugin": "^8.49.0",
        "@typescript-eslint/parser": "^8.49.0",
        "eslint": "^9.39.2",
        "husky": "^9.1.7",
        "jest": "^30.2.0",
        "lint-staged": "^16.2.7",
        "prettier": "^3.7.4",
        "semantic-release": "^25.0.2",
        "ts-jest": "^29.4.6",
        "typescript": "^5.9.3"
    },
    "files": [
        "dist",
        "src"
    ],
    "lint-staged": {
        "*.ts": [
            "eslint --fix",
            "prettier --write"
        ]
    }
}
